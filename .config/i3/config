###########################################################################
#####                           Startup                               #####
###########################################################################

exec_always --no-startup-id ~/.fehbg &
exec_always --no-startup-id picom
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id xmodmap $HOME/.config/xmodmaprc
exec --no-startup-id nm-applet
exec --no-startup-id sleep 20 &&  dunst
exec --no-startup-id lxsession
exec --no-startup-id redshift
exec_always --no-startup-id autotiling

###########################################################################
#####                           Basic                                 #####
###########################################################################

# set Mod Key, Super -> Mod4  Alt -> Mod1 
set $mod Mod4

# set variables
set	$TERM		alacritty
set     $BROWSER	chromium
set     $SCRIPTS	"$HOME/.config/scripts/"

#Fonts
font xft:Overpass 10
font pango:mononoki bold 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $TERM

#Menu
bindsym $mod+d exec dmenu_run -nb \#4C566A -nf \#E5E9F0
bindsym Mod1+space exec "rofi -show run"

# kill focused window
bindsym $mod+Shift+q kill

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# toggle split in horizontal/vertical orientation
bindsym $mod+v split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
#bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

bindsym $mod+Tab workspace back_and_forth

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

#Resize
bindsym $mod+Shift+y resize grow        width   5 px or 5 ppt  
bindsym $mod+Shift+u resize grow        height  5 px or 5 ppt      
bindsym $mod+Shift+i resize shrink      height  5 px or 5 ppt      
bindsym $mod+Shift+o resize shrink      width   5 px or 5 ppt      

# Gaps
#smart_gaps on
gaps inner 8
gaps outer 4
for_window [class="^.*"] border pixel 4

# set certain applications to launch in floating mode
for_window [class="Pavucontrol"] floating enable sticky enable
for_window [class="Nitrogen"] floating enable sticky enable
for_window [class="TelegramDesktop"] floating enable 
for_window [class="Lxappearance"] floating enable sticky enable
for_window [class="scrcpy"] floating enable
for_window [class="Lightdm-gtk-greeter-settings"] floating enable
for_window [title="File Transfer*"] floating enable
for_window [class="Galculator"] floating enable sticky enable
for_window [class="qt5ct"] floating enable sticky enable

for_window [class="java-lang-Thread"] floating enable
for_window [class="sun-awt-X11-XWindowPeer"] floating enable
for_window [title="Android\ Virtual\ Device\ Manager"] floating enable
for_window [title="Android\ Emulator\ -"] floating enable

# set certain applications to launch in certain workspaces
assign [class="Chromium"] $ws1
assign [class="firefox"] $ws1
assign [class="code"] $ws3
assign [class="code-oss"] $ws3
assign [class="java-lang-Thread"] $ws2
assign [class="sun-awt-X11-XFramePeer"] $ws2
assign [class="jetbrains-studio"] $ws2
assign [class="scrcpy"] $ws3
assign [class="Thunar"] $ws3
assign [class="discord"] $ws7
assign [class="ticktick-nativefier-a173fa"] $ws10

for_window [class="Spotify"] move to workspace $ws10
for_window [class="ticktick-nativefier-a173fa"] move to workspace $ws10

no_focus [window_role="pop-up"]


###########################################################################
#####                     Fn + F1-10,12 Shortcuts                     #####
###########################################################################

bindsym XF86Tools exec LD_PRELOAD=/usr/local/lib/spotify-adblock.so spotify
bindsym XF86Mail exec chromium mail.google.com                       
bindsym XF86HomePage exec dropbox                       
bindsym XF86Calculator exec galculator                 
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +3%            
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -3%
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous


# Screen brightness controls
# bindsym XF86MonBrightnessUp exec "xbacklight -inc 10; notify-send 'brightness up'"
# bindsym XF86MonBrightnessDown exec "xbacklight -dec 10; notify-send 'brightness down'"


###########################################################################
#####                     Application Shortcuts                       #####
###########################################################################

bindsym     $mod+Shift+P    exec pavucontrol
bindsym     $mod+a          exec ./Desktop/Android.desktop 
bindsym     $mod+w          exec chromium
bindsym     $mod+Shift+w    exec firefox
bindsym     $mod+e          exec pcmanfm
bindsym     $mod+c          exec code
bindsym     $mod+x          exec adb connect 192.168.43.1:5555 && scrcpy -s 192.168.43.1:5555 --stay-awake -m 1920
bindsym     $mod+n 			exec ticktick
bindsym     $mod+m 			exec $HOME/.appimages/marktext.AppImage
bindsym     Print           exec scrot -e 'mv $f ~/Pictures' | notify-send -a scrot -t 2000 "Screenshot saved in ~/Pictures"
bindsym     $mod+Print      exec sh $SCRIPTS/rofi/screenshot-rofi.sh
bindsym		$mod+p			exec wal -i $HOME/Pictures/walls/

#####################################################################################
#####                     Menu Scripts											#####

# Rofi Script Bindings
bindsym $mod+Shift+e exec sh $SCRIPTS/rofi/power-rofi.sh
bindsym Mod1+Shift+c exec sh $SCRIPTS/rofi/config-edit-rofi.sh

####################################################################################                                                  
#######							 Color Theme								 #######         
####################################################################################

set $bg-color           #E5E9F0
set $in-bg-color        #3B4252
set $border-color       #D08770
set $in-border-color    #A3BE8C


set $urgent-color  #BF616A
set $hint-color    #B48EAD

set $text-color    #ECEFF4


#class                          border                  backgr.             text			indicator       child_border
client.focused                  $border-color           $bg-color           $text-color		$hint-color		$border-color	
client.unfocused                $in-border-color        $in-border-color    $text-color		$hint-color		$in-border-color
client.focused_inactive         $in-border-color        $in-border-color    $text-color		$hint-color		$in-border-color
client.urgent                   $urgent-color           $bg-color           $text-color		$hint-color		$urgent-color  
#client.background              
